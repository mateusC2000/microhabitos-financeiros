<%= form_with(model: financial_goal) do |form| %>
  <% if financial_goal.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(financial_goal.errors.count, "erro") %> impediram este objetivo financeiro de ser salvo:</h2>

      <ul>
        <% financial_goal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Título", style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, "Descrição", style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :target_value, "Valor necessário", style: "display: block" %>
    <%= form.text_field :target_value %>
  </div>

  <div>
    <%= form.label :due_date, "Data final", style: "display: block" %>
    <%= form.date_field :due_date %>
  </div>

  <div>
    <%= form.label :user_id, "ID do usuário", style: "display: block" %>
    <%= form.number_field :user_id %>
  </div>

  <div>
    <%= form.submit "Salvar" %>
  </div>
<% end %>
